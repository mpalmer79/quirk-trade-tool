{
  "name": "orchestrator",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/server.js",
    "dev": "nodemon --watch src --ext ts --exec ts-node src/server.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts",
    "validate:security": "node validate-env-security.js",
    "prestart": "npm run validate:security",
    "generate:secret": "node -e \"console.log('JWT_SECRET=' + require('crypto').randomBytes(32).toString('base64'))\"",
    "generate:key": "node -e \"console.log('DATA_KEY=' + require('crypto').randomBytes(16).toString('hex'))\""
  },
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "zod": "^3.22.4",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "pino": "^8.16.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "uuid": "^9.0.1",
    "nanoid": "^5.0.4",
    "multer": "^1.4.5-lts.1",
    "csv-parse": "^5.5.3",
    "express-rate-limit": "^7.1.5",
    "pdf-lib": "^1.17.1",
    "pdfkit": "^0.13.0",
    "ioredis": "^5.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/multer": "^1.4.11",
    "@types/uuid": "^9.0.7",
    "@types/pdfkit": "^0.13.0",
    "@types/supertest": "^6.0.2",
    "@types/ioredis": "^5.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "typescript": "^5.4.0",
    "dotenv": "^16.3.1",
    "vitest": "^1.0.4",
    "@vitest/coverage-v8": "^1.0.4",
    "supertest": "^6.3.3"
  }
}
