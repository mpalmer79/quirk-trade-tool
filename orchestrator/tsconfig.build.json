{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": false,
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "types": ["node"],
    "lib": ["ES2020", "DOM"]
  },
  "include": ["src"],
  "exclude": [
    "src/__tests__",
    "**/*.test.ts",
    "**/__mocks__/**",
    "**/*.mock.ts",
    "vitest.config.ts",
    "validate-env-security.js"
  ]
}
