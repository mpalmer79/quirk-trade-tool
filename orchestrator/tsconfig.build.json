{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "__note": "Do NOT include Vitest types when compiling for production.",
    "types": ["node"],
    "noEmit": false,
    "strict": false,
    "skipLibCheck": true,
    "noImplicitAny": false
  },
  "include": ["src"],
  "exclude": [
    "src/__tests__",
    "**/*.test.ts",
    "**/__mocks__/**",
    "**/*.mock.ts",
    "vitest.config.ts",
    "validate-env-security.js"
  ]
}
