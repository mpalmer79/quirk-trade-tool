# ============================================================================
# QUIRK TRADE TOOL - PRODUCTION ENVIRONMENT CONFIGURATION
# ============================================================================
# 
# This is the EXAMPLE file. Copy to .env and update values.
# Never commit .env to version control!
#
# ============================================================================

# NODE ENVIRONMENT
# Options: development, production, test
NODE_ENV=development

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================

# Server port (1-65535)
PORT=4000

# Logging level
# Options: trace, debug, info, warn, error, fatal
LOG_LEVEL=info

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================

# JWT Secret (generate with: openssl rand -hex 32)
# CRITICAL: Must be different for production! Never use default!
JWT_SECRET=your-secret-key-here-change-me-in-production

# Token expiration times
JWT_EXPIRY=24h
REFRESH_TOKEN_EXPIRY=7d

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL connection details
DB_HOST=localhost
DB_PORT=5432
DB_NAME=quirk_trade_tool
DB_USER=postgres
DB_PASSWORD=your-secure-password-here

# ============================================================================
# VIN DECODER CONFIGURATION
# ============================================================================

# Auto.dev API Key (for VIN decoding)
# Get your key from: https://auto.dev/dashboard/api-keys
AUTODEV_API_KEY=sk_ad_CzPAJeRAVpJp6k5Jki58PV--

# ============================================================================
# CORS CONFIGURATION
# ============================================================================

# Comma-separated list of allowed origins
# Leave empty to use defaults (localhost:3000, GitHub Pages)
ALLOW_ORIGINS=http://localhost:3000,https://your-frontend-domain.com
