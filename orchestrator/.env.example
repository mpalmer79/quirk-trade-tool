# Orchestrator API Configuration
PORT=4000
NODE_ENV=development

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================
# CRITICAL: Generate a secure random JWT secret for production (min 32 chars)
# Use: node -e "console.log('JWT_SECRET=' + require('crypto').randomBytes(32).toString('base64'))"
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_VALUE_MIN_32_CHARS

# CRITICAL: Generate a secure 32-character key for data encryption (16 bytes = 32 hex chars)
# Use: node -e "console.log('DATA_KEY=' + require('crypto').randomBytes(16).toString('hex'))"
DATA_KEY=CHANGE_THIS_TO_32_CHAR_HEX_KEY

# ============================================================================
# DATABASE CONFIGURATION (REQUIRED)
# ============================================================================
# PostgreSQL connection settings - All fields required
DB_HOST=localhost
DB_PORT=5432
DB_NAME=quirk_trade_tool
DB_USER=postgres
DB_PASSWORD=YOUR_SECURE_PASSWORD_MIN_8_CHARS
DB_SSL=false

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
# Logging level: trace, debug, info, warn, error, fatal
LOG_LEVEL=info

# CORS Configuration (comma-separated, no trailing slashes)
ALLOW_ORIGINS=http://localhost:3000

# Directory to store appraisal receipts
RECEIPTS_DIR=./data/receipts

# Max request body size
MAX_REQUEST_SIZE=200kb

# ============================================================================
# EXTERNAL API KEYS (Optional - for valuation providers)
# ============================================================================
# Black Book
BLACKBOOK_API_KEY=
BLACKBOOK_API_URL=https://api.blackbook.com/v1

# Kelley Blue Book
KBB_API_KEY=
KBB_API_URL=https://api.kbb.com/v1

# NADA Guides
NADA_API_KEY=
NADA_API_URL=https://api.nada.com/v1

# Manheim
MANHEIM_API_KEY=
MANHEIM_API_URL=https://api.manheim.com/v1
