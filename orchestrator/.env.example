# Orchestrator API Configuration
PORT=4000
NODE_ENV=development

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================
# CRITICAL: Generate a secure random JWT secret for production
# Use: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_VALUE
JWT_EXPIRY=24h
REFRESH_TOKEN_EXPIRY=7d

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# PostgreSQL connection settings - Use environment-specific values
PGHOST=your-database-host.supabase.co
PGPORT=5432
PGDATABASE=postgres
PGUSER=postgres
PGPASSWORD=YOUR_SECURE_PASSWORD_HERE

# Legacy DB variables (for backwards compatibility)
DB_HOST=your-database-host.supabase.co
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=YOUR_SECURE_PASSWORD_HERE

# ============================================================================
# Redis Configuration (optional)
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
# Logging level
# Options: trace, debug, info, warn, error, fatal
LOG_LEVEL=info

# CORS Configuration
# Add your production domains here (comma-separated, no trailing slashes)
CORS_ORIGINS=https://yourdomain.com,http://localhost:3000
ALLOW_ORIGINS=https://yourdomain.com,http://localhost:3000

# Data Encryption
# CRITICAL: Generate a secure 32-character key for production
# Use: openssl rand -hex 16
DATA_KEY=CHANGE_THIS_TO_32_CHAR_SECRET_KEY

# Directory to store appraisal receipts
RECEIPTS_DIR=./data/receipts

# Max request body size
MAX_REQUEST_SIZE=200kb

# ============================================================================
# EXTERNAL API KEYS (add when licensed)
# ============================================================================
BLACKBOOK_API_KEY=
KBB_API_KEY=
NADA_API_KEY=
MANHEIM_API_KEY=
AUCTION_EDGE_API_KEY=
QUINCY_AUTO_API_KEY=
AUTODEV_API_KEY=
