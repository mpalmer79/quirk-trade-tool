{
  "name": "quirk-trade-tool",
  "private": true,
  "version": "0.1.0",
  "workspaces": ["frontend", "orchestrator"],
  "scripts": {
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:orchestrator": "pnpm --filter orchestrator dev",
    "dev": "run-p dev:*",

    "build:frontend": "pnpm --filter frontend run build",
    "build:orchestrator": "pnpm --filter orchestrator exec tsc -p tsconfig.build.json",

    "build:pages": "pnpm --filter frontend run build:pages",

    "check:types": "pnpm --filter orchestrator exec tsc --noEmit",
    
    "lint": "pnpm --filter frontend run lint && pnpm --filter orchestrator run lint",
    "lint:fix": "pnpm --filter frontend run lint:fix && pnpm --filter orchestrator run lint:fix",
    
    "format": "pnpm --filter frontend run format && pnpm --filter orchestrator run format",
    
    "test": "pnpm --filter orchestrator run test",
    "test:coverage": "pnpm --filter orchestrator run test:coverage"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
