{
  "name": "quirk-trade-tool",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@8.15.4",
  "workspaces": [
    "frontend",
    "orchestrator"
  ],
  "scripts": {
    "install:all": "pnpm install",
    
    "build": "pnpm --filter ./frontend run build",
    
    "build:all": "pnpm -w --recursive run build",
   
    "dev": "pnpm --filter ./frontend run dev",
    "start": "pnpm --filter ./frontend run start",
   
    "test": "pnpm -w --recursive run test",
    "lint": "pnpm -w --recursive run lint"
  }
}
